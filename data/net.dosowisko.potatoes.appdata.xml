<component type="desktop-application">
  <id>net.dosowisko.potatoes</id>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>Non-Competitive Singing Potatoes</name>
  <summary>A band of singing potatoes</summary>

  <description>
    <p>
      You're a conductor of a band of singing potatoes.
      Each of them can sing five different tunes, and it's up to you
      to choose which one should they sing at any given moment.
    </p>
  </description>

  <launchable type="desktop-id">potatoes.desktop</launchable>

  <developer_name>Holy Pangolin</developer_name>

  <update_contact>dos_AT_dosowisko.net</update_contact>

  <recommends>
    <display_length side="shortest" compare="ge">180</display_length>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <custom>
    <value key="Purism::form_factor">workstation</value>
    <value key="Purism::form_factor">mobile</value>
  </custom>

  <provides>
    <binary>potatoes</binary>
  </provides>

</component>
